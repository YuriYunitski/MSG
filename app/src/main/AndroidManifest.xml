<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yunitski.msg">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MSG.NoActionBar"
        android:requestLegacyExternalStorage="true">
        <activity android:name=".activities.VideoActivity"></activity>
        <activity android:name=".activities.MyOwnChatsActivity" />
        <activity android:name=".activities.RecipientProfileActivity" />
        <activity android:name=".activities.UserProfileActivity" />
        <activity android:name=".activities.PhotoActivity" />
        <activity android:name=".activities.UserListActivity" />
        <activity
            android:name=".activities.EnterActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ChatActivity" />
    </application>

</manifest>