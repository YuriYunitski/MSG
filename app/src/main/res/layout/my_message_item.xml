<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/messageLinearLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/message_income_new"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_160sdp"
            android:id="@+id/photoImageView"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:id="@+id/audioLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/audioImageView"
                android:src="@drawable/ic_baseline_play_arrow_24"
                android:background="@drawable/circle_audio"/>

            <TextView
                android:id="@+id/audioNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oi"
                android:paddingStart="5dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fileLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fileImageView"
                android:src="@drawable/ic_baseline_insert_drive_file_24_black"/>

            <TextView
                android:id="@+id/fileNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oi"
                android:paddingStart="5dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingBottom="4dp"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageTimeTextView"
            android:textColor="@color/black"
            android:layout_gravity="end"
            android:textSize="@dimen/_8sdp"
            android:paddingBottom="5dp"/>

    </LinearLayout>

</RelativeLayout>